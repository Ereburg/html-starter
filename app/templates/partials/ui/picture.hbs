<picture>
  {{# if static}}
    <source srcset="../static/images/{{img}}.webp 1x,
                    ../static/images/{{img}}@2x.webp 2x"
            type="image/webp">
    <img srcset="../static/images/{{img}}@2x{{#if fallback-png}}.png{{else}}.jpg{{/if}} 2x"
         src="../static/images/{{img}}{{#if fallback-png}}.png{{else}}.jpg{{/if}}"
         alt="">
  {{else}}
    <source srcset="../content/images/{{img}}.webp 1x,
                    ../content/images/{{img}}@2x.webp 2x"
            type="image/webp">
    <img srcset="../content/images/{{img}}@2x{{#if fallback-png}}.png{{else}}.jpg{{/if}} 2x"
         src="../content/images/{{img}}{{#if fallback-png}}.png{{else}}.jpg{{/if}}"
         alt="">
  {{/if}}
</picture>