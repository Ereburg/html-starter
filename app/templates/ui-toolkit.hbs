{{!Ui toolkit}}

{{> layout/head }}

<section class="ui">
  <header class="ui__title">
    <h1>UI Toolkit</h1>
  </header>

  <main class="ui__container">
    <aside class="ui__aside">
      <nav class="aside__inner">
        <ul class="aside__nav">
          {{#each ui.navigation}}
            <li>
              <button class="_link" data-id="{{this.id}}">{{this.label}}</button>
            </li>
          {{/each}}
        </ul>
      </nav>
    </aside>
    <section class="ui__main">
      {{#each ui.navigation}}
        {{#> ui-kit/core/section title=this.title id=this.id}}
          {{> ui-kit/core/content content=content}}
        {{/ui-kit/core/section}}
      {{/each}}
    </section>
  </main>
</section>

{{> popups/example}}

<script>
  window.onload = () => {
    const $btn = $('.aside__nav').find('._link');

    $btn.on('click', function() {
      const id = $(this).data('id');

      $('html, body').animate({
        scrollTop: $(`#${id}`).offset().top,
      }, 600);
    });
  };
</script>

